<section id="contact" class="header-spacing">
    <div>
        <div class="line xs-spacing"></div>

        <section id="contact-intro-text" class="grid-container main-text-margins">
            <div>
                <h1 class="heading small-spacing"><span>Contact </span>Us</h1>
                <h2 class="subheading xs-spacing"><span>We are here for you.</h2>
                <div class="medium-spacing"><img src="img/graphics/triangle.svg" alt="triangle graphics"></div>
            </div>
        </section>

        <section id="contact-hero" class="xl-photo-grid big-spacing">
            <div>
                <img src="img/contact/contact.jpg" alt="group of people">
            </div>
        </section>

        <section id="contact-form" class="grid-container">
            <div>
                <section id="contact-button-section">
                    <section id="button-container">
                        <button id="contact-us-btn" class="button-submit">Contact Us <i class="fas fa-ellipsis-v"></i></button>

                        <section id="contact-options">
                            <ul>
                                <li><a href="mailto:eugejkdesign@gmail.com"><i class="fas fa-envelope"></i>Email</a>
                                </li>
                                <li><button id="show-form-button"><i class="fas fa-align-left"></i>Contact Form</button>
                                </li>
                            </ul>
                        </section>
                    </section>
                </section>

                <section id="form-container" class="body-text">
                    <form action="https://formspree.io/mnqgowgz" method="POST">
                        <section>
                            <input type="text" placeholder="Name" name="name">
                        </section>

                        <section>
                            <input type="email" placeholder="Email" name="email">
                        </section>

                        <section>
                            <textarea placeholder="Message" name="message"></textarea>
                        </section>

                        <section>
                            <button class="button-submit" type="submit">Submit</button>
                        </section>
                    </form>
                </section>
            </div>
        </section>

        <div class="line xs-spacing"></div>

        <section id="google-map" class="grid-container">
            <div>
                <div id="map"></div>
            </div>
        </section>

        <div class="line xs-spacing"></div>

    </div>
</section>